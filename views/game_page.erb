<h1>Hello, <%= @name %>! Let the games begin!</h1>

<h2>Enter firing coordinates!</h2>
<form action="fire_shot" method="post">
  <input type="text" name="coordinates"></input>
  <input type="submit" value="FIRE!"></input>
</form>

<% if @hit == true %>
  <h4>HIT!!</h4>
<% elsif @hit == false %>
  <h4>MISS!!</h4>
<% end %>

<% if @coordinate_already_been_shot_at == true %>
  <h4>Try again - you've already fired at that coordinate</h4>
<% end %>

<h3>Opponent's board:</h3>
<pre> <%= $game.opponent_board_view $game.player_1 %> </pre>
